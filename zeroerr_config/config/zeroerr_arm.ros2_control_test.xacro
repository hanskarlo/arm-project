                    <param name="position">4</param>
                    <param name="mode_of_operation">8</param>
                    <param name="slave_config">/home/aroarm0/arm_ws/src/zeroerr_arm/zeroerr_config/config/zeroerr_slave_config.yaml</param>
                </ec_module>
            </joint>
            <joint name="j6">
                <command_interface name="position"/>
                <state_interface name="position"/>
                <ec_module name="EROB">
                    <plugin>ethercat_generic_plugins/EcCiA402Drive</plugin>
                    <param name="alias">0</param>
                    <param name="position">5</param>
                    <param name="mode_of_operation">8</param>
                    <param name="slave_config">/home/aroarm0/arm_ws/src/zeroerr_arm/zeroerr_config/config/zeroerr_slave_config.yaml</param>
                </ec_module>
            </joint>

        </ros2_control>
    </xacro:macro>
</robot>